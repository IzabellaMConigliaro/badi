<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_background_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <ImageView
            android:id="@+id/button_close"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin_android"
            app:srcCompat="@drawable/ic_close_green"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_android" />

        <TextView
            android:id="@+id/dialog_title"
            app:layout_constraintTop_toBottomOf="@+id/button_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/green_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="27sp"
            android:layout_marginStart="@dimen/activity_horizontal_margin_android"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_android"
            android:text="@string/dialog_need_badi"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="19sp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="12sp"
            android:paddingStart="@dimen/activity_horizontal_margin_android"
            android:paddingEnd="@dimen/activity_horizontal_margin_android"
            android:text="@string/dialog_need_badi_message"/>

        <Button
            android:id="@+id/button_list_room"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_list_room"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_button"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="32dp"
            android:paddingLeft="32dp"
            android:paddingEnd="32dp"
            android:paddingRight="32dp"
            android:drawableStart="@drawable/ic_add_white"
            android:drawableLeft="@drawable/ic_add_white"
            android:background="@drawable/button_background_round_green"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>